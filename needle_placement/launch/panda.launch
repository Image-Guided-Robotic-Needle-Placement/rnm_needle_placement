<?xml version="1.0" ?>
<launch>

    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find franka_description)/robots/panda_arm.urdf.xacro"/>

    <!-- Load joint controller configurations from YAML file to parameter server -->
    <rosparam file="$(find needle_placement)/config/JTC.yaml" command="load"/>

    <!-- load the controllers -->
    <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="joint_state_controller position_joint_trajectory_controller" />

    <!-- convert joint states to TF transforms for rviz, etc -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="true" output="screen" />
    
    <node name="initial_joint_state_publisher" pkg="your_package" type="initial_joint_state_publisher.py" output="screen"/>

    <arg name="with_rviz" default="true" />

    <group if="$(arg with_rviz)">
	<node pkg="rviz" type="rviz" output="screen" name="rviz" args="-d $(find franka_visualization)/launch/franka_visualization.rviz"/>
    </group>

</launch>